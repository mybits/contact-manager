<% content_for :title, "Contact manager | Companies" %>
<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td>
          <ul>
            <li class="actions"><%= link_to 'Show', company %></li>
            <li class="actions"><%= link_to 'Edit', edit_company_path(company) %></li>
            <li class="actions"><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, id: 'new_company' %>
