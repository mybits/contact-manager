= content_for :title, "Contact manager | #{@company.to_s}"
%p#notice= notice
.company
  %p
    %strong
      = @company.name
  = render 'phone_numbers/phone_numbers', phone_numbers: @company.phone_numbers
  %p= link_to 'Add phone number', new_phone_number_path(contact_id: @company.id, contact_type: 'Company')
  = render 'email_addresses/email_addresses', email_addresses: @company.email_addresses
  %p= link_to 'Add email address', new_email_address_path(contact_id: @company.id, contact_type: 'Company')
  = link_to 'Edit', edit_company_path(@company)
  |
  = link_to 'Back', companies_path
