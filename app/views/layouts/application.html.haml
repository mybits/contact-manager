!!!
%html
  %head
    %title= yield(:title)
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div#account
      = link_to 'Login', login_path, id: 'login'
      - if current_user
        = link_to 'Logout', logout_path, id: 'logout', method: :delete
    = yield
